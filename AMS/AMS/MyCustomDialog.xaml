<Window x:Class="MyCustomDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AMS" Height="138" Width="220" ResizeMode="CanMinimize">
    <StackPanel>
        <TextBlock Text="Enter marks" FontSize="15" FontWeight="Bold" />
        <TextBox x:Name="ResponseTextBox"></TextBox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="OK" Name="Button1" />
            <Button Grid.Column="1" Content="Cancel" Name="Button2" />
        </Grid>
        
    </StackPanel>
</Window>
